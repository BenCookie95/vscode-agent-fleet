{
    "name": "agent-fleet",
    "displayName": "Agent Fleet",
    "description": "Command a team of Claude Code agents. Orchestrate parallel coding sessions, monitor real-time status, and manage updates across multiple repositories.",
    "version": "0.1.4",
    "publisher": "BenCookie95",
    "license": "MIT",
    "icon": "resources/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/BenCookie95/vscode-agent-fleet"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Machine Learning",
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "agent-fleet",
                    "title": "Agent Fleet",
                    "icon": "resources/agent-fleet-icon.svg"
                }
            ]
        },
        "views": {
            "agent-fleet": [
                {
                    "id": "agentFleetView",
                    "name": "",
                    "icon": "resources/agent-fleet-icon.svg"
                }
            ]
        },
        "commands": [
            {
                "command": "agentFleet.addAgent",
                "title": "Add Project",
                "icon": "$(add)"
            },
            {
                "command": "agentFleet.removeAgent",
                "title": "Remove Project"
            },
            {
                "command": "agentFleet.refreshAgents",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "agentFleet.openTerminal",
                "title": "Open Terminal"
            },
            {
                "command": "agentFleet.installHooks",
                "title": "Agent Fleet: Install Hooks"
            },
            {
                "command": "agentFleet.uninstallHooks",
                "title": "Agent Fleet: Uninstall Hooks"
            },
            {
                "command": "agentFleet.focusWorkspace",
                "title": "Focus Workspace",
                "icon": "$(window)"
            },
            {
                "command": "agentFleet.unfocusWorkspace",
                "title": "Unfocus Workspace"
            },
            {
                "command": "agentFleet.showAgentQuickPick",
                "title": "Agent Fleet: Show Agents"
            },
            {
                "command": "agentFleet.focusWorkspaceFromTerminal",
                "title": "Focus Workspace",
                "icon": "$(window)"
            },
            {
                "command": "agentFleet.setStatusIdle",
                "title": "Reset Status to Idle"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "agentFleet.addAgent",
                    "when": "view == agentFleetView",
                    "group": "navigation"
                },
                {
                    "command": "agentFleet.refreshAgents",
                    "when": "view == agentFleetView",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "agentFleet.focusWorkspace",
                    "when": "viewItem == agent",
                    "group": "navigation"
                },
                {
                    "command": "agentFleet.openTerminal",
                    "when": "viewItem == agent"
                },
                {
                    "command": "agentFleet.removeAgent",
                    "when": "viewItem == agent"
                },
                {
                    "command": "agentFleet.setStatusIdle",
                    "when": "viewItem == agent"
                }
            ],
            "terminal/title/context": [
                {
                    "command": "agentFleet.focusWorkspaceFromTerminal",
                    "group": "navigation"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "agentFleetView",
                "contents": "No projects yet.\n[Add Project](command:agentFleet.addAgent)\n\nSelect a code directory to start a Claude agent. Each project gets its own terminal session."
            }
        ],
        "configuration": {
            "title": "Agent Fleet",
            "properties": {
                "agentFleet.shellPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to the shell executable to use for agent terminals (e.g., /bin/bash). Leave empty to use the system default."
                },
                "agentFleet.claude.model": {
                    "type": "string",
                    "default": "",
                    "description": "Claude model to use (e.g., 'sonnet', 'opus', 'claude-sonnet-4-20250514'). Leave empty for default."
                },
                "agentFleet.claude.appendSystemPrompt": {
                    "type": "string",
                    "default": "",
                    "description": "Text to append to Claude's default system prompt. Useful for adding custom instructions."
                },
                "agentFleet.claude.appendSystemPromptFile": {
                    "type": "string",
                    "default": "",
                    "description": "Path to a file containing text to append to Claude's system prompt."
                },
                "agentFleet.claude.allowedTools": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "List of tool patterns that can execute without permission prompts (e.g., 'Bash(npm*)', 'Read')."
                },
                "agentFleet.claude.skipPermissions": {
                    "type": "boolean",
                    "default": false,
                    "markdownDescription": "**⚠️ Use with caution!** Skip all permission prompts. Only enable if you trust the code being modified."
                },
                "agentFleet.claude.verbose": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable verbose debug output from Claude CLI."
                },
                "agentFleet.claude.additionalDirs": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Additional directories for Claude to access beyond the agent's working directory."
                },
                "agentFleet.claude.extraFlags": {
                    "type": "string",
                    "default": "",
                    "description": "Additional command-line flags to pass to Claude CLI (e.g., '--debug --output-format json')."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "node esbuild.mjs",
        "watch": "node esbuild.mjs --watch",
        "package": "node esbuild.mjs --production",
        "compile-tests": "tsc -p ./",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "esbuild": "^0.27.2",
        "eslint": "^8.54.0",
        "typescript": "^5.3.0"
    },
    "dependencies": {
        "simple-git": "^3.21.0"
    }
}