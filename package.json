{
    "name": "agent-fleet",
    "displayName": "Agent Fleet",
    "description": "Manage multiple AI coding agents across repos and worktrees",
    "version": "0.1.0",
    "publisher": "agent-fleet",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "agent-fleet",
                    "title": "Agent Fleet",
                    "icon": "resources/agent-fleet-icon.svg"
                }
            ]
        },
        "views": {
            "agent-fleet": [
                {
                    "id": "agentFleetView",
                    "name": "Agents",
                    "icon": "resources/agent-fleet-icon.svg"
                }
            ]
        },
        "commands": [
            {
                "command": "agentFleet.addAgent",
                "title": "Add Agent",
                "icon": "$(add)"
            },
            {
                "command": "agentFleet.removeAgent",
                "title": "Remove Agent"
            },
            {
                "command": "agentFleet.refreshAgents",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "agentFleet.openTerminal",
                "title": "Open Terminal"
            },
            {
                "command": "agentFleet.installHooks",
                "title": "Agent Fleet: Install Hooks"
            },
            {
                "command": "agentFleet.uninstallHooks",
                "title": "Agent Fleet: Uninstall Hooks"
            },
            {
                "command": "agentFleet.focusWorkspace",
                "title": "Focus Workspace",
                "icon": "$(window)"
            },
            {
                "command": "agentFleet.unfocusWorkspace",
                "title": "Unfocus Workspace"
            },
            {
                "command": "agentFleet.showAgentQuickPick",
                "title": "Agent Fleet: Show Agents"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "agentFleet.addAgent",
                    "when": "view == agentFleetView",
                    "group": "navigation"
                },
                {
                    "command": "agentFleet.refreshAgents",
                    "when": "view == agentFleetView",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "agentFleet.focusWorkspace",
                    "when": "viewItem == agent",
                    "group": "navigation"
                },
                {
                    "command": "agentFleet.openTerminal",
                    "when": "viewItem == agent"
                },
                {
                    "command": "agentFleet.removeAgent",
                    "when": "viewItem == agent"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "agentFleetView",
                "contents": "No agents yet.\n[Add Agent](command:agentFleet.addAgent)\n\nAdd your first agent to start managing AI coding sessions across multiple directories."
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "eslint": "^8.54.0",
        "typescript": "^5.3.0"
    },
    "dependencies": {
        "simple-git": "^3.21.0"
    }
}